@model FreeWheeling.UI.Models.AdHocCreateModel

@{
    ViewBag.Title = "Create Ad Hoc Ride";
}

<h2>Create Ad Hoc Ride</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <div><span class="RequiredField">*&nbsp;</span>Ride Name:</div>
        <div>
            @Html.TextBoxFor(model => model.Name)
        </div>
    <div>
        <p></p>
        @Html.DropDownListFor(
             x => x.LocationsId,
    new SelectList(
        Model.Locations.ToList().Select(
                     x => new { Value = x.id, Text = x.Name }
        ),
        "Value",
                 "Text", Model.LocationsId
    ), "-- Ride Location --", new { @class = "form-control" }
)
        <p></p>
    </div>
    
    <div>
    </div>
        
        <div><span class="RequiredField">*&nbsp;</span>Date and Time</div>
        <div>
            <div class='input-group date' id='datetimepicker1'>
                @Html.TextBoxFor(model => model.RideDate, new { @class = "form-control", data_format = "DD/MM/YYYY H:mm:ss" })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
          
        </div>
    
        <hr />
    
        <div><span class="RequiredField">*&nbsp;</span>Start Location</div>
        
        <div> 
            @Html.TextBoxFor(model => model.StartLocation)
        </div>
    
    <div><span class="RequiredField">*&nbsp;</span>Average Speed</div>
        
        <div> 
            @Html.TextBoxFor(model => model.AverageSpeed)
        </div>
    
        <div>
            <p></p>
            <input id="btnSubmit" type="submit" value="Create Ad Hoc Ride" />
        </div>
    
}

<div class="container">
    <div class="col-md-10">
        <div class='well'>
            <div class="form-group">
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
        
    </div>
</div>


@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>

<script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker();
    });
</script>



}