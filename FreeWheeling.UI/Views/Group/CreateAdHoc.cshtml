@model FreeWheeling.UI.Models.AdHocCreateModel

@{
    ViewBag.Title = "Create Ad Hoc Ride";
}

<h2>Create Ad Hoc Ride</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <div><span class="RequiredField">*&nbsp;</span>Ride Name:</div>
        <div>
            @Html.TextBoxFor(model => model.Name)
        </div>
    <div>
        <p></p>
        @Html.DropDownListFor(
             x => x.LocationsId,
    new SelectList(
        Model.Locations.ToList().Select(
                     x => new { Value = x.id, Text = x.Name }
        ),
        "Value",
                 "Text", Model.LocationsId
    ), "-- Ride Location --", new { @class = "form-control" }
)
        <p></p>
    </div>
    
    <div>
    </div>      
        @*<div><span class="RequiredField">*&nbsp;</span>Date and Time</div>
        <div>
            <div class='input-group date' id='datetimepicker1'>
                @Html.EditorFor(model => model.RideDate, "{0:dd/MM/yyyy}", new {id = "RideDate", @class = "form-control", data_format = "DD/MM/YYYY" })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
                <span> @Html.ValidationMessageFor(m => m.RideDate, null, new { @class = "help-inline" }) </span>
            </div>        
        </div>*@
        
        <div><span class="RequiredField">*&nbsp;</span>Date</div>
        <div>
            @Html.EditorFor(model => model.RideDate, "{0:dd/MM/yyyy}", new { id = "RideDate", @class = "form-control", data_format = "DD/MM/YYYY" })
            <span> @Html.ValidationMessageFor(m => m.RideDate, null, new { @class = "help-inline" }) </span>
        </div>
    
        <div><span class="RequiredField">*&nbsp;</span>Hour (24 Hour)</div>
        <div>
            @Html.TextBoxFor(model => model.Hour)
        </div>
    
        <div><span class="RequiredField">*&nbsp;</span>Minute</div>
        <div>
            @Html.TextBoxFor(model => model.Minute)
        </div>
        
        <hr />
    
        <div><span class="RequiredField">*&nbsp;</span>Start Location</div>
        
        <div> 
            @Html.TextBoxFor(model => model.StartLocation)
        </div>
    
    <div><span class="RequiredField">*&nbsp;</span>Average Speed</div>
        
        <div> 
            @Html.TextBoxFor(model => model.AverageSpeed)
        </div>
    
        <div>
            <p></p>
            <input id="btnSubmit" type="submit" value="Create Ad Hoc Ride" />
        </div>    
}

