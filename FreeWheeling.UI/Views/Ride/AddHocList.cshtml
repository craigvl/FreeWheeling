@model FreeWheeling.UI.Models.AdHocRidesModel
@using FreeWheeling.Domain.Entities

@{
    ViewBag.Title = "AddHocList";
}

@Html.ActionLink("Back <---", "Index", "Home", null, new { @class = "btn btn-info" })


<h2>Add Hoc bunches</h2>

@if (@Model._Ad_HocRide.Count > 0 )
{              
    foreach (Ad_HocRide item in @Model._Ad_HocRide)
    {
        <h3> <span class="label label-info">@item.Name </span></h3>
        <p></p>
        @item.RideDate.ToLongDateString() @Html.Raw(", ") @item.RideDate.ToShortTimeString()
        <p></p>
        @Html.ActionLink(string.Concat("View bunch Details"), "ViewAdHocRide", "Ride", new { adhocrideid = item.id }, new { @class = "btn btn-success" })
        <hr />   
    }
}
 else
    {
       @Html.ActionLink("No Ad Hoc bunches yet, please create some!", "CreateAdHoc", "Group", null, new { @class = "btn btn-default" })                
    }