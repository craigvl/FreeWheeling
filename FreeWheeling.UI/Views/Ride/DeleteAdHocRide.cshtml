@model FreeWheeling.UI.Models.DeleteAdHocRideModel

@{
    ViewBag.Title = "Delete Ad Hoc bunch";
}
<div class="row">
<p></p>
<p>Delete random bunch?</p>
<div>
    <dl class="dl-horizontal">       
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <p>All riders will be sent an email to let them know that ad hoc bunch has been deleted.</p>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input onclick="ShowProgress();" type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>
</div>
@section scripts{
    <script>
        jQuery(document).ready(function () {
            HideProgress();
        });
    </script>
}