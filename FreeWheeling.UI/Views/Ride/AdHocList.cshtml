@model FreeWheeling.UI.Models.AdHocRidesModel
@using FreeWheeling.Domain.Entities

@{
    ViewBag.Title = "Add Hoc bunches";
}
<div class="row">
    <div class="pull-left">
        @Html.ActionLink(" ", "Index", "Home", null, new { @class = "glyphicon glyphicon-chevron-left", @style = "background-color: #FFF; color: #333333;", onclick = "ShowProgress();" })
    </div>
</div>
<p></p>
   <div class="row">
            <div class="btn-group btn-block col-xs-12 col-md-3 col-sm-6" style="margin-bottom:5px;width:100%;">
                <span class="btn btn-default btn-block">Random Bunches</span>
            </div>
       </div>
@if (@Model._Ad_HocRide.Count > 0)
{
    @Html.Partial("_ListRandomRides")
}

@if (@Model.PrivateRandomBunches.Count > 0)
{
    @Html.Partial("_ListPrivateRandomRides")
}

@if (@Model._Ad_HocRide.Count + @Model.PrivateRandomBunches.Count <= 0)
{
    <div class="row">
                    <div class="btn-group btn-block col-xs-12 col-md-3 col-sm-6" style="padding-left:10px">
                        @Html.ActionLink("No Random bunches yet, please create some!", "CreateAdHoc", "Group", null,
                 new { @class = "", style = "color:#333333;text-decoration:underline", onclick = "ShowProgress();" })
                    </div>              
    </div>
        }
        @section scripts{
            <script>
                jQuery(document).ready(function () {
                    HideProgress();
                });
            </script>
        }