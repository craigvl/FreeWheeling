            }
        </div>
    </div>
    <div>

        @using (Html.BeginForm("AddComment", "Ride", new
        {
            groupid = @Model.Group.id,
            rideid = @Model.NextRide.id,
            FromFavPage = @Model.FromFavPage,
            ParentRideID = @Model.Ride.id
