@model FreeWheeling.UI.Models.AllAdHocRideComments
@using FreeWheeling.Domain.Entities

@{
    ViewBag.Title = "See All Ad Hoc Comments";
}

@Html.ActionLink(" ", "ViewAdHocRide", "Ride", new { adhocrideid = @Model.adhocrideid }, new { @class = "glyphicon glyphicon-chevron-left", @style = "background-color: #FFF; color: #333333;", onclick = "ShowProgress();" })

<h2>All Comments</h2>

@foreach (AdHocComment item in @Model.Comments)
{
  @item.userName @Html.Raw(":")  @item.CommentText
    <p></p>
}
@section scripts{
    <script>
        jQuery(document).ready(function () {
            HideProgress();
        });
    </script>
}